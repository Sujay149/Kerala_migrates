rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions for cleaner rules
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isCreatingOwnResource() {
      return isAuthenticated() && 
        request.resource.data.keys().hasAll(['userId']) &&
        request.resource.data.userId == request.auth.uid;
    }
    
    function isUpdatingOwnResource() {
      return isAuthenticated() && 
        resource.data.userId == request.auth.uid;
    }

    // User profiles - users can only access their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      allow create: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Chat sessions - users can only access their own chat sessions
    match /chatSessions/{sessionId} {
      allow read, write: if isAuthenticated() && 
        (resource == null || isUpdatingOwnResource());
      allow create: if isCreatingOwnResource();
    }
    
    // Medications - users can only access their own medications
    match /medications/{medicationId} {
      allow read, write: if isAuthenticated() && 
        (resource == null || isUpdatingOwnResource());
      allow create: if isCreatingOwnResource();
    }
    
    // Health records - users can only access their own health records
    match /healthRecords/{recordId} {
      allow read, write: if isAuthenticated() && 
        (resource == null || isUpdatingOwnResource());
      allow create: if isCreatingOwnResource();
    }
    
    // Appointments - users can only access their own appointments
    match /appointments/{appointmentId} {
      allow read, write: if isAuthenticated() && 
        (resource == null || isUpdatingOwnResource());
      allow create: if isCreatingOwnResource();
    }
    
    // Prescription analyses - users can only access their own analyses
    match /prescriptionAnalyses/{analysisId} {
      allow read, write: if isAuthenticated() && 
        (resource == null || isUpdatingOwnResource());
      allow create: if isCreatingOwnResource();
    }
    
    // Summaries - users can only access their own summaries
    match /summaries/{summaryId} {
      allow read, write: if isAuthenticated() && 
        (resource == null || isUpdatingOwnResource());
      allow create: if isCreatingOwnResource();
    }
    
    // Notification settings - users can only access their own settings
    match /notificationSettings/{settingsId} {
      allow read, write: if isAuthenticated() && 
        (resource == null || isUpdatingOwnResource());
      allow create: if isCreatingOwnResource();
    }
    
    // Medication reminders - users can only access their own reminders
    match /medicationReminders/{reminderId} {
      allow read, write: if isAuthenticated() && 
        (resource == null || isUpdatingOwnResource());
      allow create: if isCreatingOwnResource();
    }
    
    // Scheduled reminders - users can only access their own scheduled reminders
    match /scheduledReminders/{reminderId} {
      allow read, write: if isAuthenticated() && 
        (resource == null || isUpdatingOwnResource());
      allow create: if isCreatingOwnResource();
    }
  }
}